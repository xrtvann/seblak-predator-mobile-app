<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background -->
    <solid android:color="#4CAF50"/>

    <!-- Sudut membulat -->
    <corners android:radius="40dp"/>
    <gradient
        android:angle="90"
        android:startColor="#ED3613"
        android:centerColor="@color/primary"
        android:endColor="@color/secondary"
        android:type="linear"/>

    <!-- Padding dalam -->
    <padding
        android:left="16dp"
        android:top="10dp"
        android:right="16dp"
        android:bottom="10dp"/>
</shape>