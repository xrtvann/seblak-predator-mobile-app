<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ===================== HEADER ===================== -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#D94A27"
        android:padding="12dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <!-- Keranjang -->
        <LinearLayout
            android:id="@+id/btnKeranjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_product"
                app:tint="@color/white" />

        </LinearLayout>

        <!-- Profil -->
        <LinearLayout
            android:id="@+id/btnProfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toStartOf="@id/btnKeranjang"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_person" />

        </LinearLayout>

    </RelativeLayout>

    <!-- ===================== ISI FORM ===================== -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- NAMA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edtNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Isi nama kamu" />
            </LinearLayout>

            <!-- LEVEL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Level"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- KUAH -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Kuah"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rgKuah"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/kuahNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normal" />

                    <RadioButton
                        android:id="@+id/kuahNyemek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nyemek"
                        android:layout_marginStart="20dp" />
                </RadioGroup>
            </LinearLayout>

            <!-- TELUR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Telur"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rgTelur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/telurUtuh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Utuh" />

                    <RadioButton
                        android:id="@+id/telurOrak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Orak Arik"
                        android:layout_marginStart="20dp" />

                    <RadioButton
                        android:id="@+id/tanpaTelur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanpa"
                        android:layout_marginStart="20dp" />
                </RadioGroup>
            </LinearLayout>

            <!-- KENCUR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Kencur"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerKencur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- RASA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Rasa"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnerRasa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- BUTTON LANJUT -->
            <Button
                android:id="@+id/btnLanjut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LANJUT"
                android:textStyle="bold"
                android:backgroundTint="@color/primary"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="290dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
