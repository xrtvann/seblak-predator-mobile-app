<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- ===================== HEADER ===================== -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="#D94A27"
            android:padding="12dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back" />

            <!-- Keranjang -->
            <LinearLayout
                android:id="@+id/btnKeranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/ic_product"
                    app:tint="@color/white" />

            </LinearLayout>

            <!-- Profil -->
            <LinearLayout
                android:id="@+id/btnProfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/btnKeranjang"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/profilepage"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/ic_person" />

            </LinearLayout>

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- NAMA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labelName"
                        android:layout_width="90dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Nama"
                        style="@style/TextAppearance.Material3.BodyMedium.Emphasized" />

                    <EditText
                        android:id="@+id/costumerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        style="@style/TextAppearance.Material3.BodyMedium.Emphasized"
                        android:hint="Isi nama kamu" />
                </LinearLayout>

                <!-- LEVEL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labelLevel"
                        android:layout_width="90dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Level"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/pilihanLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- KUAH -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labelKuah"
                        android:layout_width="90dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="Kuah"
                        android:paddingTop="15dp"
                        style="@style/TextAppearance.Material3.BodyMedium.Emphasized"/>

                    <RadioGroup
                        android:id="@+id/tipeKuah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/kuahNormal"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Normal" />

                        <RadioButton
                            android:id="@+id/kuahNyemek"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Nyemek" />
                    </RadioGroup>
                </LinearLayout>

                <!-- TELUR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/labelEgg"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Telur"
                        android:textColor="@color/black"
                        android:paddingTop="10dp"
                        style="@style/TextAppearance.Material3.BodyMedium.Emphasized" />

                    <RadioGroup
                        android:id="@+id/tipeTelur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/telurUtuh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Telur Utuh" />

                        <RadioButton
                            android:id="@+id/telurOrak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="Orak Arik" />

                    </RadioGroup>
                </LinearLayout>

                <!-- KENCUR -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:text="Kencur"
                        android:textColor="@color/black"
                        style="@style/TextAppearance.Material3.BodyMedium.Emphasized" />

                    <Spinner
                        android:id="@+id/pilihanKencur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!-- RASA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal"/>

                <!-- BUTTON LANJUT -->
                <Button
                    android:id="@+id/btnLanjut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="290dp"
                    android:backgroundTint="@color/primary"
                    android:padding="12dp"
                    android:text="LANJUT"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <!-- ===================== ISI FORM ===================== -->

</androidx.constraintlayout.widget.ConstraintLayout>
