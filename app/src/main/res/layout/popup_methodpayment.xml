<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/backbutton"
        style="@style/TextAppearance.Material3.BodyLarge.Emphasized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_back"
        android:drawableTint="@color/black"
        android:textColor="@color/black"
        android:drawablePadding="10dp"
        android:text="Back" />

    <TextView
        android:text="Metode Pembayaran"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        style="@style/TextAppearance.Material3.BodyMedium.Emphasized"
        android:paddingBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Card COD -->

    <!-- Transfer Bank -->
    <!-- Sub-menu pilihan transfer bank -->
    <LinearLayout
        android:id="@+id/layoutBankList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingTop="8dp"
        android:visibility="visible">

        <!-- Pilihan Metode Pembayaran -->
        <LinearLayout
            android:id="@+id/viaBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <!-- Nama metode-->
            <ImageView
                android:id="@+id/imageMethod"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="0"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/namaMethod"
                style="@style/TextAppearance.Material3.BodyMedium.Emphasized"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="30dp"
                android:text="Method"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <!-- Radio button -->
            <RadioButton
                android:id="@+id/paymentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btnConfirm"
        android:text="Konfirmasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        style="@style/TextAppearance.Material3.BodyLarge.Emphasized"
        android:backgroundTint="#FF5722"/>

</LinearLayout>
